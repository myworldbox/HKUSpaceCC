<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_multi_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF55"
    tools:context=".MultiTouchActivity">

    <TextView
        android:id="@+id/tView_multitouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MULTITOUCH"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imgView_multitouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tView_multitouch"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/butHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgView_multitouch"
        android:text="BACK HOME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>